<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shoplex.shoplex">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Shoplex">
        <activity android:name=".view.activities.DescriptionActivity"
            android:configChanges="orientation">

        </activity>
        <activity android:name=".view.activities.LoginActivity"></activity>
        <activity
            android:name=".view.activities.FilterActivity"
            android:theme="@style/AppTheme.Home"/>

        <activity android:name=".view.activities.SignupActivity"/>
        <activity
            android:name=".view.activities.MapsActivity"
            android:label="@string/title_activity_maps" />
        <activity android:name=".view.activities.ProfileActivity" />
        <activity
            android:name=".view.activities.OrderActivity"
            android:theme="@style/AppTheme.Home" />
        <activity android:name=".view.activities.MessageActivity" />
        <activity
            android:name=".view.activities.CheckOutActivity"
            android:theme="@style/AppTheme.Home" />
        <activity
            android:name=".view.activities.HomeActivity"
            android:windowSoftInputMode="adjustNothing"
            android:theme="@style/AppTheme.Home">
        </activity>
        <activity
            android:name=".view.activities.SplashActivity"
            android:theme="@style/Theme.Shoplex.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.activities.ProductDetails" />

        <service
            android:name=".model.services.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
                <action android:name="com.shoplex.cancel" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/maps_key" />

    </application>

</manifest>