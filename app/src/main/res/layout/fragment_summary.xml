<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.SummaryFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_item_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_12"
            android:layout_marginTop="28dp"
            android:padding="@dimen/padding_8"

            android:text="@string/itemnumbers"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_summary"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv_item_num"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/tv_item_num"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_num"
            app:layout_constraintVertical_bias="0.032"
            tools:listitem="@layout/rv_summary_cardview" />

        <View
            android:id="@+id/summary_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="@dimen/margin_6"

            android:background="@drawable/view_shape"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/rv_summary"
            app:layout_constraintStart_toStartOf="@+id/rv_summary"
            app:layout_constraintTop_toBottomOf="@+id/rv_summary"
            app:layout_constraintVertical_bias="0.013" />

        <TextView
            android:id="@+id/tv_payment_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_28"
            android:layout_marginTop="@dimen/margin_16"


            android:text="Payment Method"
            android:textColor="@color/darkBlue"
            android:textSize="16sp"
            android:textStyle="bold"

            app:layout_constraintStart_toStartOf="@+id/summary_view"
            app:layout_constraintTop_toTopOf="@+id/summary_view" />

        <TextView
            android:id="@+id/tv_Delivery_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginBottom="16dp"
            android:text="Delivery Method"
            android:textColor="@color/darkBlue"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/summary_view"
            app:layout_constraintStart_toStartOf="@+id/tv_payment_method" />

        <TextView
            android:id="@+id/tv_payment_statue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"

            android:text="Fawry"
            android:textColor="@color/darkBlue"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/summary_view"
            app:layout_constraintTop_toTopOf="@+id/tv_payment_method" />

        <TextView
            android:id="@+id/tv_delivery_statue"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:text="Nearest Post Station"

            android:textColor="@color/darkBlue"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_Delivery_method"
            app:layout_constraintEnd_toEndOf="@+id/tv_payment_statue" />

        <LinearLayout
            android:id="@+id/linear_layout_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_8"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintEnd_toEndOf="@+id/summary_view"
            app:layout_constraintStart_toStartOf="@+id/summary_view"
            app:layout_constraintTop_toBottomOf="@+id/summary_view">

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_12"
                android:layout_weight="1.9"
                android:orientation="vertical"
                android:padding="@dimen/padding_8">

                <TextView
                    android:id="@+id/tv_subtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_16"
                    android:text="@string/SubTotal"
                    android:textSize="14sp"

                    />

                <TextView
                    android:id="@+id/tv_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_16"
                    android:text="@string/Discount" />

                <TextView
                    android:id="@+id/tv_shipping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_16"
                    android:text="@string/Shipping" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay2"
                android:layout_width="@dimen/width_120"
                android:layout_height="match_parent"

                android:layout_margin="@dimen/margin_12"
                android:layout_weight="0.1"


                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/padding_8">

                <TextView
                    android:id="@+id/tv_SubtotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_16"
                    android:text="@string/subTotalPrice" />

                <TextView
                    android:id="@+id/tv_DiscountPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_16"
                    android:text="@string/discountPrice" />

                <TextView
                    android:id="@+id/tv_ShippingPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_16"
                    android:text="@string/shippingPrice" />


            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/price_view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear_layout_payment" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_12"
            android:layout_marginTop="16dp"

            android:padding="@dimen/padding_8"
            app:layout_constraintEnd_toEndOf="@+id/linear_layout_payment"
            app:layout_constraintStart_toStartOf="@+id/linear_layout_payment"
            app:layout_constraintTop_toBottomOf="@+id/linear_layout_payment">


            <TextView
                android:id="@+id/tv_Total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16"

                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginBottom="@dimen/margin_8"
                android:text="@string/Total"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_TotalPrice"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginEnd="@dimen/margin_32"
                android:layout_marginBottom="@dimen/margin_8"
                android:text="@string/totalPrice"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/btn_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/margin_16"

            android:layout_marginTop="@dimen/margin_64"
            android:layout_marginEnd="@dimen/margin_16"
            android:backgroundTint="@color/darkBlue"
            android:clickable="true"
            android:text="@string/confirmorder"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/layout3"
            app:layout_constraintStart_toStartOf="@+id/layout3"
            app:layout_constraintTop_toBottomOf="@+id/layout3"
            app:layout_constraintVertical_bias="0.028" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>